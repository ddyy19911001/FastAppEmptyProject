    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>

    <!--dialog的style-->
    <!-- ActionSheet进出动画 -->

    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>

    <!-- my gif_loading dialog -->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="rtl_RecyclerTabLayout">
        <item name="rtl_tabMinWidth">72dp</item>
        <item name="rtl_tabMaxWidth">264dp</item>
        <item name="rtl_tabIndicatorColor">?attr/colorAccent</item>
        <item name="rtl_tabIndicatorHeight">2dp</item>
        <item name="rtl_tabPaddingStart">12dp</item>
        <item name="rtl_tabPaddingEnd">12dp</item>
        <item name="rtl_tabBackground">?attr/selectableItemBackground</item>
        <item name="rtl_tabTextAppearance">@style/rtl_RecyclerTabLayout.Tab</item>
        <item name="rtl_tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="rtl_RecyclerTabLayout.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TableText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/progress_bar_color</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor" tools:ignore="NewApi" tools:targetApi="lollipop">#00000000</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/textColorPrimary</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_F8F8F8</item>
        <!--允许启用窗口内容转换效果-->
        <!--        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>-->
        <item name="android:activityOpenEnterAnimation">@anim/new_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/new_to_right</item>
        <!--        <item name="android:typeface">serif</item>-->
    </style>

    <style name="font_100"><item name="android:textFontWeight" tools:targetApi="p">100</item></style>
    <style name="font_200"><item name="android:textFontWeight" tools:targetApi="p">200</item></style>
    <style name="font_300"><item name="android:textFontWeight" tools:targetApi="p">300</item></style>
    <style name="font_400"><item name="android:textFontWeight" tools:targetApi="p">400</item></style>
    <style name="font_500"><item name="android:textFontWeight" tools:targetApi="p">500</item></style>
    <style name="font_600"><item name="android:textFontWeight" tools:targetApi="p">600</item></style>
    <style name="font_700"><item name="android:textFontWeight" tools:targetApi="p">700</item></style>
    <style name="font_800"><item name="android:textFontWeight" tools:targetApi="p">800</item></style>


</resources>